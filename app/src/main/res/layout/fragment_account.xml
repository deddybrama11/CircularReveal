<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="700dp"
            android:layout_height="500dp"
            android:src="@drawable/elips"
            android:layout_marginTop="-380dp"
            />
        <ImageView
            android:layout_marginTop="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/logo_tomat2"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Deteksi Penyakit dan hama pada tanaman tomat"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi deteksi penyakit dan hama pada tanaman tomat adalah aplikasi yang dapat melakukan deteksi penyakit dan hama khususnya pada tanaman tomat dengan cara pengambilan gambar atau foto. Diharapkan aplikasi ini dapat membantu user untuk melakukan pengendalian hama dan penyakit pada tanaman tomatnya."
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="14dp"/>
        <androidx.cardview.widget.CardView
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>